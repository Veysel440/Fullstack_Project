{
  "title": "API â€“ Latency/Errors/Cache/Ratelimit",
  "tags": ["api","prometheus"],
  "time": { "from": "now-6h", "to": "now" },
  "templating": {
    "list": [
      {
        "name": "job",
        "type": "query",
        "datasource": "Prometheus",
        "refresh": 2,
        "query": "label_values(up, job)"
      }
    ]
  },
  "panels": [
    {
      "type": "timeseries",
      "title": "Latency P95 (ms)",
      "datasource": "Prometheus",
      "targets": [
        { "expr": "1000 * histogram_quantile(0.95, sum by (le) (rate(http_duration_seconds_bucket{job=~\"$job\"}[5m])))", "legendFormat": "p95" }
      ],
      "id": 1
    },
    {
      "type": "timeseries",
      "title": "Error rate (5xx / all)",
      "datasource": "Prometheus",
      "targets": [
        { "expr": "sum(rate(http_requests_total{job=~\"$job\",status=~\"5..\"}[5m])) / sum(rate(http_requests_total{job=~\"$job\"}[5m]))", "legendFormat": "error_rate" }
      ],
      "id": 2
    },
    {
      "type": "timeseries",
      "title": "304 hit ratio",
      "datasource": "Prometheus",
      "targets": [
        { "expr": "sum(rate(http_cache_304_total{job=~\"$job\"}[5m])) / sum(rate(http_requests_total{job=~\"$job\",status=~\"2..|3..\"}[5m]))", "legendFormat": "304_ratio" }
      ],
      "id": 3
    },
    {
      "type": "timeseries",
      "title": "Rate-limit drops",
      "datasource": "Prometheus",
      "targets": [
        { "expr": "sum(rate(ratelimit_dropped_total{job=~\"$job\"}[5m]))", "legendFormat": "drops/s" }
      ],
      "id": 4
    }
  ],
  "schemaVersion": 36,
  "version": 2
}
