# Build
FROM golang:1.23-alpine AS build
WORKDIR /src
ENV GOTOOLCHAIN=auto
COPY go.mod ./
RUN go mod download
COPY . .
RUN CGO_ENABLED=0 go build -o /out/api ./cmd/api

# Run
FROM gcr.io/distroless/base-debian12
WORKDIR /app
ENV PORT=8080
COPY --from=build /out/api /app/api
EXPOSE 8080
ENTRYPOINT ["/app/api"]